<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        android:paddingBottom="?attr/actionBarSize"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ly_header"
                android:padding="@dimen/size14dp"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                <RatingBar
                        android:id="@+id/rating_product"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        />
                <TextView
                        android:id="@+id/tv_ulasan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        tools:text="119 ulasan"

                        android:layout_marginLeft="@dimen/size14dp"
                        />
            </LinearLayout>

            <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    tools:text="Promo bla bla"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size14dp"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_discount_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rounded_accent_10dp"
                        tools:text="50%"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:layout_marginRight="@dimen/size14dp"/>
                <TextView
                        android:id="@+id/tv_normal_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        tools:text="Rp67.000"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="@dimen/size14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_price_discount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        tools:text="Rp34.000"
                        android:layout_gravity="center"
                        android:textColor="@color/colorAccent"/>
                <LinearLayout
                        android:id="@+id/btn_nego"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/size14dp"
                        android:paddingRight="@dimen/size14dp"
                        android:background="@drawable/shape_nego"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        >
                    <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_nego_24dp"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="center"
                            android:text="Nego"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly_header"
                android:orientation="horizontal"
                android:padding="@dimen/size14dp"
                android:gravity="center"
                android:id="@+id/ly_benefit">
            <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Benefit"
                    android:textColor="@color/black"/>
            <ImageView
                    android:id="@+id/iv_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_directions_car_black_24dp"
                    />
            <ImageView
                    android:id="@+id/iv_time"
                    android:layout_marginLeft="@dimen/size14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_timelapse_black_24dp"
                    />
            <ImageView
                    android:layout_marginLeft="@dimen/size14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_right_black_24dp"/>
        </LinearLayout>
        <LinearLayout

                android:id="@+id/ly_ongkos"
                android:layout_below="@+id/ly_benefit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size14dp"
                android:background="@color/white"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_circular"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/size14dp"
                    android:layout_gravity="center"
                    android:text="Cek Kurir &amp; ongkos kirim"
                    />
            <ImageView
                    android:layout_marginLeft="@dimen/size14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_right_black_24dp"/>

        </LinearLayout>
        <RelativeLayout
                android:layout_marginTop="@dimen/size14dp"
                android:id="@+id/ly_info"
                android:layout_below="@+id/ly_ongkos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/size14dp"
                android:paddingTop="@dimen/size14dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="14dp"
                    android:paddingLeft="@dimen/size14dp"
                    android:text="Informasi Barang"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded_accent_10dp"
                    android:id="@+id/tv_condition"
                    android:layout_alignParentRight="true"
                    tools:text="Baru"
                    android:textColor="@color/white"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="3dp"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/size14dp"
                    android:paddingBottom="3dp"/>

            <LinearLayout
                    android:id="@+id/ly_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/tv1"
                    android:paddingRight="14dp"
                    android:paddingLeft="@dimen/size14dp"
                    android:layout_marginTop="24dp">
                <ImageView
                        android:id="@+id/iv_stock"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_circular"/>
                <TextView
                        android:layout_marginLeft="@dimen/size14dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock"
                        android:layout_weight="1"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_stock"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/size14dp"/>

            </LinearLayout>
            <LinearLayout
                    android:id="@+id/ly_terjual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/ly_stock"
                    android:paddingRight="14dp"
                    android:paddingLeft="@dimen/size14dp"
                    android:layout_marginTop="@dimen/size14dp">
                <ImageView
                        android:id="@+id/iv_terjual"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_circular"/>
                <TextView
                        android:layout_marginLeft="@dimen/size14dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terjual"
                        android:layout_weight="1"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_terjual"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/size14dp"/>

            </LinearLayout>
            <View
                    android:id="@+id/dividerInfo"
                    android:layout_below="@+id/ly_terjual"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size14dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/gainsboro"/>

            <TextView
                    android:layout_below="@+id/dividerInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="5"
                    android:ellipsize="end"
                    android:id="@+id/tv_desc"
                    android:paddingLeft="@dimen/size14dp"
                    android:lineSpacingExtra="1.5dp"
                    android:paddingRight="@dimen/size14dp"
                    tools:text="desc"
                    android:textColor="@color/black"/>


            <TextView
                    android:id="@+id/btnMoreDesc"
                    android:layout_marginTop="@dimen/size14dp"
                    android:layout_below="@id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="4dp"
                    android:text="Selengkapnya"
                    android:clickable="true"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"/>


        </RelativeLayout>

        <LinearLayout
                android:id="@+id/ly_pelapak"
                android:layout_below="@+id/ly_info"
                android:layout_marginTop="@dimen/size14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size14dp"
                android:paddingBottom="@dimen/size14dp"
                android:background="@color/white"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Pelapak"
                    android:paddingLeft="@dimen/size14dp"
                    android:paddingRight="@dimen/size14dp"
                    android:textColor="@color/black"/>
            <RelativeLayout
                    android:layout_marginTop="@dimen/size14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size14dp"
                   android:paddingRight="@dimen/size14dp"
                    android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_user"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        />
                <TextView
                        android:id="@+id/tv_user"
                        android:layout_toRightOf="@+id/iv_user"
                        android:layout_marginLeft="@dimen/size14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="USerBl"
                        android:textStyle="bold"
                        android:lineSpacingExtra="1.5dp"
                        android:textColor="@color/black"/>
                <TextView
                        android:id="@+id/tv_loc"
                        android:layout_toRightOf="@+id/iv_user"
                        android:layout_below="@+id/tv_user"
                        android:layout_marginLeft="@dimen/size14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="USerBl"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

               <ImageView
                       android:id="@+id/iv_rank"
                       android:layout_alignParentRight="true"
                       android:layout_width="24dp"
                       android:layout_height="24dp"
                       />
            </RelativeLayout>

            <LinearLayout
                    android:layout_marginTop="@dimen/size14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size14dp"
                    android:paddingRight="@dimen/size14dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/iv_level"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_circular"

                        />
                <TextView
                        android:id="@+id/tv_level"
                        android:layout_marginLeft="@dimen/size14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        tools:text="Good user"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        />
            </LinearLayout>
            <LinearLayout
                    android:paddingLeft="@dimen/size14dp"
                    android:paddingRight="@dimen/size14dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/iv_feedback"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_circular"

                        />
                <TextView
                        android:id="@+id/tv_total_feedback"
                        android:layout_marginLeft="@dimen/size14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        tools:text="100% (5000 feedback)"
                        android:textColor="@color/black"
                        />
            </LinearLayout>
            <LinearLayout
                    android:paddingLeft="@dimen/size14dp"
                    android:paddingRight="@dimen/size14dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/iv_waktu_kirim"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_circular"

                        />
                <TextView
                        android:id="@+id/tv_waktu_kirim"
                        android:layout_marginLeft="@dimen/size14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        tools:text="Waktu kirim pesanan"
                        android:gravity="center"
                        android:textColor="@color/black"
                        />
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size14dp"
                    android:layout_marginBottom="@dimen/size14dp"
                    android:background="@color/gainsboro"/>
            <LinearLayout
                    android:id="@+id/ly_catatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size14dp"
                    android:paddingRight="14dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Catatan Pelapak"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        />
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_below="@+id/ly_pelapak"
                android:layout_marginTop="@dimen/size14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/size14dp"
                android:paddingBottom="@dimen/size14dp"
                android:background="@color/white"
                android:id="@+id/ly_ulasan">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size14dp"
                    android:paddingRight="@dimen/size14dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Ulasan Barang"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_star_yelow_24dp"
                        />
                <TextView
                        android:id="@+id/tv_rating"
                        android:layout_marginLeft="@dimen/size14dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/content_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size14dp"
                    android:visibility="gone"
                    android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />

                <TextView
                        android:id="@+id/btn_see_all_review"
                        android:layout_marginTop="@dimen/size14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lihat Semua Ulasan (154)"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/size8dp"
                        android:clickable="true"/>
            </LinearLayout>
            <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/progress_review"/>

        </LinearLayout>
        <LinearLayout
                android:background="@color/white"
                android:layout_below="@id/ly_ulasan"
                android:id="@+id/ly_similar"
                android:layout_marginTop="@dimen/size14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/size14dp"

                    >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Barang Terkait"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />

                <TextView
                        android:id="@+id/tvMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat Semua"
                        android:layout_marginLeft="@dimen/size14dp"
                        android:textColor="@color/colorAccent"
                        />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rvSimilar"></androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>