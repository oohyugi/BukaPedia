<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/ly_home"
                android:background="@color/white"
        >
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    <LinearLayout
            android:id="@+id/ly_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/size14dp"

            >

        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

        <TextView
                android:id="@+id/tvMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Semua"
                android:layout_marginLeft="@dimen/size14dp"
                android:textColor="@color/colorAccent"
                />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ly_container"
            android:layout_below="@+id/ly_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size14dp"
            android:layout_marginBottom="@dimen/size14dp"
            />

</RelativeLayout>