<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="8dp"
        android:layout_margin="4dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"

        xmlns:tools="http://schemas.android.com/tools"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <ImageView
                    android:id="@+id/ivProduct"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:scaleType="fitXY"
                    />
            <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/softBlack"
                        android:id="@+id/tvTitleProduct"
                        android:lines="2"
                        android:ellipsize="end"
                        android:textSize="12sp"
                        tools:text="Sepatu Sport Pria Baru Converse"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/tvDiscountPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="Rp71Rb"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            tools:text="RP200RB"
                            android:layout_marginLeft="4dp"
                            android:id="@+id/tvOriginalPrice"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/ly_stock">
                    <androidx.core.widget.ContentLoadingProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:progress="40"
                            android:id="@+id/progress"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                    <TextView

                            android:id="@+id/tvStock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="56 Tersisa"
                            android:textSize="10sp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


            <TextView
                    android:id="@+id/tvDiscountPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30%"
                    android:paddingLeft="4dp"
                    android:paddingRight="@dimen/size14dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/ic_badgee"
                    android:visibility="visible"
                    />

    </RelativeLayout>

</androidx.cardview.widget.CardView>