<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvBanner"
            android:nestedScrollingEnabled="false"
            android:paddingLeft="@dimen/size14dp"
            android:clipToPadding="false"
            />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="18dp"
            >

        <com.kingfisher.easyviewindicator.AnyViewIndicator
                android:visibility="gone"
                android:id="@+id/anyViewIndicator"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:avi_animation_enable="true"
                app:avi_drawable="@drawable/white_radius"
                app:avi_drawable_unselected="@drawable/gray_radius"
                app:avi_height="10dp"
                app:avi_margin="4dp"
                app:avi_width="10dp"
                android:layout_marginBottom="14dp"
                />
    </LinearLayout>


</RelativeLayout>