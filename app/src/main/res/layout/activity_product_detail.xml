<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".view.detail.ProductDetailActivity"
        >
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false"
                >
            <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vpImage"
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    app:layout_collapseMode="parallax"
                    />
            <include layout="@layout/toolbar"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"

            >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ly_header"
                    android:padding="@dimen/size14dp"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                    <RatingBar
                            android:id="@+id/rating_product"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            />
                    <TextView
                            android:id="@+id/tv_ulasan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            tools:text="119 ulasan"

                            android:layout_marginLeft="@dimen/size14dp"
                            />
                </LinearLayout>

                <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        tools:text="Promo bla bla"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size14dp"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/tv_discount_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_discount_prod"
                            tools:text="50%"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:layout_marginRight="@dimen/size14dp"/>
                    <TextView
                            android:id="@+id/tv_normal_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            tools:text="Rp67.000"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="@dimen/size14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/tv_price_discount"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            tools:text="Rp34.000"
                            android:layout_gravity="center"
                            android:textColor="@color/colorAccent"/>
                    <LinearLayout
                            android:id="@+id/btn_nego"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingLeft="@dimen/size14dp"
                            android:paddingRight="@dimen/size14dp"
                            android:background="@drawable/shape_nego"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            >
                        <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_nego_24dp"
                                />
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_gravity="center"
                                android:text="Nego"/>
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ly_header"
                    android:orientation="horizontal"
                    android:padding="@dimen/size14dp"
                    android:gravity="center"
                    android:id="@+id/ly_benefit">
                <TextView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Benefit"
                        android:textColor="@color/black"/>
                <ImageView
                        android:id="@+id/iv_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_directions_car_black_24dp"
                        />
                <ImageView
                        android:id="@+id/iv_time"
                        android:layout_marginLeft="@dimen/size14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_timelapse_black_24dp"
                        />
                <ImageView
                        android:layout_marginLeft="@dimen/size14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>
            </LinearLayout>
            <LinearLayout

                    android:id="@+id/ly_ongkos"
                    android:layout_below="@+id/ly_benefit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size14dp"
                    android:background="@color/white"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_circular"
                        />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/size14dp"
                        android:layout_gravity="center"
                        android:text="Cek Kurir &amp; ongkos kirim"
                        />
                <ImageView
                        android:layout_marginLeft="@dimen/size14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>

            </LinearLayout>
            <RelativeLayout
                    android:layout_marginTop="@dimen/size14dp"
                    android:id="@+id/ly_info"
                    android:layout_below="@+id/ly_ongkos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/size14dp"
                    android:paddingTop="@dimen/size14dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="14dp"
                        android:paddingLeft="@dimen/size14dp"
                        android:text="Informasi Barang"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_discount_prod"
                        android:id="@+id/tv_condition"
                        android:layout_alignParentRight="true"
                        tools:text="Baru"
                        android:textColor="@color/white"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="3dp"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/size14dp"
                        android:paddingBottom="3dp"/>

                <LinearLayout
                        android:id="@+id/ly_stock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/tv1"
                        android:paddingRight="14dp"
                        android:paddingLeft="@dimen/size14dp"
                        android:layout_marginTop="24dp">
                    <ImageView
                            android:id="@+id/iv_stock"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_circular"/>
                    <TextView
                           android:layout_marginLeft="@dimen/size14dp"
                           android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stock"
                           android:layout_weight="1"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_stock"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/size14dp"/>

                </LinearLayout>
                <LinearLayout
                        android:id="@+id/ly_terjual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ly_stock"
                        android:paddingRight="14dp"
                        android:paddingLeft="@dimen/size14dp"
                        android:layout_marginTop="@dimen/size14dp">
                    <ImageView
                            android:id="@+id/iv_terjual"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_circular"/>
                    <TextView
                            android:layout_marginLeft="@dimen/size14dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terjual"
                            android:layout_weight="1"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_terjual"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/size14dp"/>

                </LinearLayout>
                <View
                        android:id="@+id/dividerInfo"
                        android:layout_below="@+id/ly_terjual"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/size14dp"
                        android:layout_marginBottom="14dp"
                        android:background="@color/gainsboro"/>

                <TextView
                        android:layout_below="@+id/dividerInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="5"
                        android:ellipsize="end"
                        android:id="@+id/tv_desc"
                        android:paddingLeft="@dimen/size14dp"
                        android:lineSpacingExtra="1.5dp"
                        android:paddingRight="@dimen/size14dp"
                        tools:text="desc"
                        android:textColor="@color/black"/>


                <TextView
                        android:id="@+id/btnMoreDesc"
                        android:layout_marginTop="@dimen/size14dp"
                        android:layout_below="@id/tv_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="4dp"
                        android:text="Selengkapnya"
                        android:clickable="true"
                        android:textColor="@color/colorAccent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center"/>


            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:paddingLeft="@dimen/size14dp"
            android:paddingRight="@dimen/size14dp"
            android:orientation="horizontal">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_message_black_24dp"
                android:padding="@dimen/size8dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_nego"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_shopping_cart_black_24dp"
                android:padding="@dimen/size8dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_nego"
                android:layout_marginLeft="@dimen/size8dp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_marginLeft="@dimen/size8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="Beli Sekarang"
                android:textAllCaps="false"
                android:layout_gravity="center"/>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>