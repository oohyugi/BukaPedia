<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/size14dp"
              android:background="@color/white"
        >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/size8dp"
            android:paddingLeft="@dimen/size14dp"
            android:paddingRight="@dimen/size14dp"
            android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_user"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_circular"
                />
        <TextView
                android:layout_marginLeft="@dimen/size14dp"
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                tools:text="John Doe"
                />
        <TextView
                android:layout_marginLeft="@dimen/size14dp"
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="\u2022 26 Des 2018"
                />
    </LinearLayout>
    <RatingBar
            android:id="@+id/rating_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size14dp"
            android:layout_marginRight="@dimen/size14dp"
            style="@style/Widget.AppCompat.RatingBar.Small"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:layout_marginTop="@dimen/size8dp"
            android:paddingLeft="@dimen/size14dp"
            android:paddingRight="@dimen/size14dp"
            tools:text="Puas Banget"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:lineSpacingExtra="1.5dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_subtitle"
            android:layout_marginTop="@dimen/size8dp"
            android:paddingLeft="@dimen/size14dp"
            android:paddingRight="@dimen/size14dp"
            tools:text="Puas Banget"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:lineSpacingExtra="1.5dp"/>
    <ImageView
            android:visibility="gone"
            android:layout_marginTop="@dimen/size8dp"
            android:layout_marginRight="@dimen/size14dp"
            android:layout_marginLeft="@dimen/size14dp"
            android:id="@+id/iv_review"
            android:layout_width="60dp"
            android:layout_height="60dp"
            />

    <LinearLayout
            android:id="@+id/ly_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/size14dp"
            android:paddingRight="@dimen/size14dp"
            android:layout_marginTop="@dimen/size8dp">
        <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_circular"
                android:layout_gravity="center"
                />
        <TextView
                android:id="@+id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="7 Orang"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size8dp"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/size14dp"

            android:background="@color/gainsboro"/>
</LinearLayout>