<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        app:behavior_peekHeight="300dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/lyBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <View
               android:layout_marginTop="@dimen/size8dp"
                android:layout_gravity="center"
                android:layout_width="36dp"
                android:layout_height="10dp"
                android:background="@drawable/shape_nego"/>

        <LinearLayout
                android:layout_marginTop="@dimen/size14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageButton
                    android:id="@+id/btnClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_black_24dp"
                    android:layout_gravity="center"
                    android:padding="@dimen/size14dp"
                    android:background="@android:color/transparent"
                    />
            <TextView
                    android:layout_marginLeft="@dimen/size14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi Barang"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gainsboro"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
            android:layout_below="@+id/lyBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
  >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/size14dp"
                    android:orientation="vertical">



                <LinearLayout
                        android:id="@+id/ly_stock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/tv1"
                        android:layout_marginTop="24dp">
                    <ImageView
                            android:id="@+id/iv_stock"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_circular"/>
                    <TextView
                            android:layout_marginLeft="@dimen/size14dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stock"
                            android:layout_weight="1"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_stock"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/size14dp"/>

                </LinearLayout>
                <LinearLayout
                        android:id="@+id/ly_terjual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ly_stock"
                        android:layout_marginTop="@dimen/size14dp">
                    <ImageView
                            android:id="@+id/iv_terjual"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_circular"/>
                    <TextView
                            android:layout_marginLeft="@dimen/size14dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terjual"
                            android:layout_weight="1"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_terjual"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/size14dp"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:padding="@dimen/size14dp"
                    android:layout_marginTop="@dimen/size14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spesifikasi"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>

                <LinearLayout
                        android:layout_marginTop="@dimen/size14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/container_spec"
                        />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/size14dp"
                    android:layout_marginTop="@dimen/size14dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Deskripsi"
                        android:textColor="@color/black"/>
                <TextView
                        android:layout_marginTop="@dimen/size14dp"
                        android:layout_below="@+id/dividerInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_desc"
                        android:lineSpacingExtra="1.5dp"
                        tools:text="desc"
                        android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
